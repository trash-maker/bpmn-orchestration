# Run the container with `docker run -p 3000:3000 -t validation-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system validation-api && \
          adduser --system -G validation-api validation-api

COPY dist/apps/validation-api validation-api
RUN chown -R validation-api:validation-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix validation-api --omit=dev -f install

CMD [ "node", "validation-api" ]
