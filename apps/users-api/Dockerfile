# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build users-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t users-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system users-api && \
          adduser --system -G users-api users-api

COPY dist/apps/users-api users-api
RUN chown -R users-api:users-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix users-api --omit=dev -f install

CMD [ "node", "users-api" ]
