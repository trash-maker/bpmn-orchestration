# Build the docker image with `npx nx docker-build booking-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t booking-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system booking-api && \
          adduser --system -G booking-api booking-api

COPY dist/apps/booking-api booking-api
RUN chown -R booking-api:booking-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix booking-api --omit=dev -f install

CMD [ "node", "booking-api" ]
